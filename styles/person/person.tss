"Window": {
	backgroundColor: "#000000",
    layout: "absolute",
    navBarHidden: true
},
"Window[platform=ios]": {
    statusBarStyle:Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT
},
"#wrapper" : {
	backgroundColor: "#000000",
	top: 0,
	left: 0,
	right: 0,
	bottom: 0
},
"#backIcon": {
	font: {
		fontSize: "36dp",
		fontWeight: "bold"
	},
	color: "#FFFFFF",
	top: "20dp",
	left: "10dp",
	zIndex: 10,
	width: "50dp",
	height: "50dp"
},
"#headerImage": {
	top: 0,
	left: 0,
	right: 0,
	height: Titanium.UI.SIZE,
	preventDefaultImage: true,
	zIndex: 1
},
"#voteRow": {
	height: "25dp",
	top: "10dp",
	width: Titanium.UI.SIZE,
	right: "10dp",
	zIndex: 12
},
"#infosWrapper": {
	top: "65dp",
	left: "120dp",
	right: 0,
	backgroundColor: "#0D000000",
	zIndex: 10
}
"#name": {
	left: 0,
	right: "10dp",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
	font: {
		fontFamily: "OpenSans-Bold",
		fontSize: '20dp'
	},
	color: "#FFFFFF"
},
"#birth": {
	top: 0,
	left: 0,
	right: "10dp",
	font: {
		fontFamily: "OpenSans",
		fontSize: '14dp'
	},
	color: "#FFFFFF",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
},
"#birth_place": {
	top: 0,
	left: 0,
	right: "10dp",
	font: {
		fontFamily: "OpenSans",
		fontSize: '12dp'
	},
	color: "#FFFFFF",
	
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
},
"#posterWrapper": {
	top: "65dp",
	left: "10dp",
	width: "110dp",
	height: Titanium.UI.SIZE,
	zIndex: 10,
	backgroundColor: "transparent"
},
"#poster": {
	preventDefaultImage: true,
	borderWidth: 2,
	borderColor: "#FFFFFF",
	borderRadius: 4,
	left: 0,
	width: "110dp",
	height: Titanium.UI.SIZE,
	zIndex: 10
},
/*
 Alpha Level	HEX Code

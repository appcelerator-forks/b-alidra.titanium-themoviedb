"#infosWrapper": {
	bottom: 0,
	left: 0,
	right: 0,
	backgroundColor: "#BF000000",
	zIndex: 10
}
"#title": {
	left: "85dp",
	right: "10dp",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
	font: {
		fontFamily: "OpenSans",
		fontSize: '20dp',
		fontWeight: 'bold'
	},
	color: "#FFFFFF"
},
"#year": {
	top: "-30dp",
	right: "10dp",
	font: {
		fontSize: '14dp'
	},
	color: "#FFFFFF",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
},
"#genres": {
	font: {
		fontFamily: "OpenSans",
		fontSize: '12dp'
	},
	color: "#FFFFFF",
	left: "85dp",
	right: "10dp",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_RIGHT,
},
"#tabs": {
	top: 0,
	bottom: "5dp",
	backgroundColor: "#000000",
	showPagingControl: true,
	pagingControlColor: "#000000",
	pagingControlAlpha: 1,
	pagingControlOnTop: "true"
},
".tabsTitle": {
	font: {
		fontFamily: "OpenSans-Bold",
		fontSize: '14dp',
		fontWeight: 'bold'
	},
	backgroundColor: "#000000",
	color: "#FFFFFF",
	top: 0,
	width: "100%",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_CENTER,
	verticalAlign: Titanium.UI.TEXT_VERTICAL_ALIGNMENT_TOP
},
"#episodesWrapper": {
	backgroundColor: "#000000",
	height: Titanium.UI.FILL
},
"#episodes": {
	backgroundColor: Alloy.Globals.theme.episode.backgroundColor,
	backgroundSelectedColor: Alloy.Globals.theme.episode.selectedRowBackgroundColor,
	separatorColor: Alloy.Globals.theme.episode.separatorColor,
	top: 0,
	left: "10dp",
	right: "10dp",
	bottom: 0,
	footerTitle: ""
},
"#overviewWrapper": {
	backgroundColor: "#000000",
	height: Titanium.UI.FILL
},
"#trailer": {
	bottom: 0,
	height: Titanium.UI.FILL
},
"#overview": {
	top: "5dp",
	left: "10dp",
	right: "10dp",
	bottom: 0,
	font: {
		fontFamily: "OpenSans",
		fontSize: '12dp'
	},
	backgroundColor: "#000000",
	color: "#FFFFFF",
	editable: false
},
"#torrentsWrapper": {
	backgroundColor: "#000000",
	height: Titanium.UI.FILL
},
"#torrentsList": {
	top: 0,
	left: 0,
	right: "15dp",
	bottom: 0,
	backgroundColor : Alloy.Globals.theme.torrents.backgroundColor,
	footerTitle: "",
    separatorColor: Alloy.Globals.theme.torrents.separatorColor,
    opacity: 0
}
"#heartIcon": {
	font: { fontSize: '10dp' },
	color: "#FFFFFF"
},
"#score": {
	font: { fontSize: '10dp' },
	color: "#FFFFFF",
	left: "2dp"
},
"#nbVotes": {
	font: { fontSize: '10dp' },
	color: "#FFFFFF",
	left: "5dp"
},
"#votes": {
	font: { fontSize: '10dp' },
	color: "#999999",
	left: "2dp"
}
<Alloy>
	<View>
		<View class="toolbar">
			<View id="toolbar_title_holder">
				<Label id="toolbar_title" />
			</View>
		</View>
		<View id="content">
			<TableView id="tableList">
				<RefreshControl id="ptr" onRefreshstart="refresh"/>
			</TableView>
			<TextField id="term"/>
		</View>
		<Button id="search_button" onClick="search">
			<Label id="search_button_icon" class="fa-icon" icon="fa-check"/>
		</Button>
		<Widget id="fa" src="com.mattmcfarland.fontawesome" debug="true"/>
	</View>
</Alloy>
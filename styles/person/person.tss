"#tabs": {
	top: 0,
	bottom: "5dp",
	backgroundColor: "#000000",
	showPagingControl: true,
	pagingControlColor: "#000000",
	pagingControlAlpha: 1,
	pagingControlOnTop: "true"
},
".tabsTitle": {
	font: {
		fontFamily: "OpenSans-Bold",
		fontSize: '14dp',
		fontWeight: 'bold'
	},
	backgroundColor: "#000000",
	color: "#FFFFFF",
	top: 0,
	width: "100%",
	textAlign: Titanium.UI.TEXT_ALIGNMENT_CENTER,
	verticalAlign: Titanium.UI.TEXT_VERTICAL_ALIGNMENT_TOP
},
"#bioWrapper": {
	backgroundColor: "#000000",
	height: Titanium.UI.FILL
},
"#bio": {
	top: "5dp",
	left: "10dp",
	right: "10dp",
	bottom: 0,
	font: {
		fontFamily: "OpenSans",
		fontSize: '12dp'
	},
	backgroundColor: "#000000",
	color: "#FFFFFF",
	editable: false
},
"#moviesWrapper": {
	backgroundColor: "#000000",
	height: Titanium.UI.FILL
},
"#moviesList": {
	top: 0,
	left: 0,
	right: "15dp",
	bottom: 0,
	backgroundColor : Alloy.Globals.theme.movies.backgroundColor,
	footerTitle: "",
    separatorColor: Alloy.Globals.theme.movies.separatorColor,
    opacity: 1
},
"#showsWrapper": {
	backgroundColor: "#000000",
	height: Titanium.UI.FILL
},
"#showsList": {
	top: 0,
	left: 0,
	right: "15dp",
	bottom: 0,
	backgroundColor : Alloy.Globals.theme.movies.backgroundColor,
	footerTitle: "",
    separatorColor: Alloy.Globals.theme.movies.separatorColor,
    opacity: 1
},
"#heartIcon": {
	font: { fontSize: '10dp' },
	color: "#FFFFFF"
},
"#score": {
	font: { fontSize: '10dp' },
	color: "#FFFFFF",
	left: "2dp"
}
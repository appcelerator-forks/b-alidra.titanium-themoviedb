"Window": {
	backgroundColor: "#000000",
    layout: "absolute",
    navBarHidden: true
},
"Window[platform=ios]": {
    statusBarStyle:Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT
},
"#wrapper" : {
	backgroundColor: "#000000",
	top: 0,
	left: 0,
	right: 0,
	bottom: 0
},
"#backIcon": {
	font: {
		fontSize: "36dp",
		fontWeight: "bold"
	},
	color: "#FFFFFF",
	top: "20dp",
	left: "10dp",
	zIndex: 10,
	width: "50dp",
	height: "50dp"
},
"#headerImage": {
	top: 0,
	left: 0,
	right: 0,
	height: Titanium.UI.SIZE,
	preventDefaultImage: true,
	zIndex: 1
},
"#voteRow": {
	height: "25dp",
	top: "10dp",
	width: Titanium.UI.SIZE,
	right: "10dp",
	zIndex: 12
},
"#posterWrapper": {
	left: "10dp",
	right: "10dp",
	height: "110dp",
	top: "-75dp",
	zIndex: 10,
	backgroundColor: "transparent"
},
"#poster": {
	preventDefaultImage: true,
	borderWidth: 2,
	borderColor: "#FFFFFF",
	borderRadius: 4,
	left: 0,
	width: Titanium.UI.SIZE,
	height: "100dp",
	zIndex: 10
},
"#downloadButton": {
	right: 0,
	bottom: "15dp",
	borderWidth: 1,
	borderColor: "#FC4545",
	borderRadius: 4,
	color: "#FC4545",
	backgroundColor: "#FFFFFF",
	height: "24dp",
	width: "80dp",
	textAlign: "center"
},
"#downloadButtonIcon": {
	font: {
		fontSize: '10dp',
		fontWeight: 'bold'
	},
	color: "#FC4545",
	top: "6dp",
	left: "5dp"
},
"#downloadButtonText": {
	font: {
		fontSize: '10dp',
		fontWeight: 'bold'
	},
	color: "#FC4545",
	top: "5dp",
	left: "5dp"
},
